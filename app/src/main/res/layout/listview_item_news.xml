<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/iv_item_img"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_item_img"
            android:lines="2"
            android:text="联想集团: 重申减持评级, 目标价4.2元"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_img"
            android:text="证卷之星"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_item_author"
            android:text="2016-7-28 22:46"
            android:textColor="#666666"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_item_img"
            android:layout_width="82dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/news_default_pic" />

    </RelativeLayout>

</LinearLayout>